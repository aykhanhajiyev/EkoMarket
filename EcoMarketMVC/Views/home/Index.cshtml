@model IEnumerable<EcoMarketMVC.Models.Product>
@{
    ViewBag.Title = " | Əsas səhifə";
}

<div class="boxes">
    <div class="section_container">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 box_col">
                    <div class="box">
                        <div class="box_image"><img src="~/assets/images/box_1.jpg" alt=""></div>
                        <div class="box_title trans_200"><a href="/home/products?q=gununfurseti">Günün Fürsətlərİ</a></div>
                    </div>
                </div>
                <div class="col-lg-4 box_col">
                    <div class="box">
                        <div class="box_image"><img src="~/assets/images/box_2.jpg" alt=""></div>
                        <div class="box_title trans_200"><a href="/home/products?q=sizinucun">Sİzİn üçün</a></div>
                    </div>
                </div>
                <div class="col-lg-4 box_col">
                    <div class="box">
                        <div class="box_image"><img src="~/assets/images/box_3.jpg" alt=""></div>
                        <div class="box_title trans_200"><a href="/home/products?q=munasibqiymetler">Münasİb Qİymətlər</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="products">
    <div class="section_container">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="products_container grid">
                        @foreach (var item in Model)
                        {
                            <div class="product grid-item @((item.IsHot)? "hot" : "") @((item.IsSale) ? "sale" : "")">
                                <div class="product_inner">
                                    <a href="/home/product/@item.Id">
                                        <div class="product_image">
                                            <img src="~/assets/upload_images/@item.ImageUrl" alt="@item.Name" height="200" width="500" style="object-fit:scale-down">
                                            <div class="product_tag">@((item.IsHot) ? "hot" : "") @((item.IsSale) ? "sale" : "")</div>
                                        </div>
                                    </a>
                                    <div class="product_content text-center">
                                        <div class="product_title"><a href="/home/product/@item.Id">@item.Name</a></div>
                                        <div class="product_price">@item.Price AZN <span>@((item.IsSale) ? (Convert.ToDouble(item.Price) * 0.2 + Convert.ToDouble(item.Price)).ToString() : "") @((item.IsSale)?"AZN" : "")</span></div>
                                        <div class="product_button ml-auto mr-auto trans_200"><a href="/home/addtocart/@item.Id">səbətə əlavə et</a></div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>