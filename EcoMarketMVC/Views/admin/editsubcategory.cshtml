@model EcoMarketMVC.Models.Subcategory
@{
    ViewBag.Title = "Düzəliş Alt Kateqoriya";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Main content -->
<div class="content-wrapper">
    <!-- Content area -->
    <div class="content">
        <!-- Basic layout-->
        <form action="/admin/editsubcategory/@Model.Id" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="panel panel-flat">
                <div class="panel-heading">
                    <h5 class="panel-title">Düzəliş Alt Kateqoriya</h5>
                </div>
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }
                <div class="panel-body">
                    <div class="form-group">
                        <label>Alt Kateqoriya adı:</label>
                        <input type="text" class="form-control" name="Name" value="@Model.Name">
                    </div>
                    <div class="form-group">
                        <label>Kateqoriya adı:</label>
                        <select name="CategoryId" class="form-control" style="font-size:1.1em">
                            @foreach (var category in (List<EcoMarketMVC.Models.Category>)ViewBag.Categories)
                            {
                                if (category.Id == Model.CategoryId)
                                {
                                    <option value="@category.Id" selected>@category.Name</option>
                                }
                                else
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="text-left">
                        <button type="submit" class="btn btn-primary">Düzəliş</button>
                    </div>
                </div>
            </div>
        </form>
        <!-- /basic layout -->
    </div>
</div>



